server {
		listen 80;
		listen [::]:80;

		root /var/www/html;

		server_name localhost www.localhost;

		index index.html index.php index.htm index.nginx-debian.html;

		location / {
				try_files $uri $uri/ =404;
		}

		location ~ \.php$ {
				include snippets/fastcgi-php.conf;
				fastcgi_pass unix:/run/php/php7.3-fpm.sock;
		}
		
		location ~ /\.ht {
				deny all;
		}
}
